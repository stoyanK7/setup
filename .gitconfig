[user]
    name = ...
    email = ...
    signingkey = /home/.../.ssh/....pub
[commit]
    gpgsign = true
[core]
    editor = nano
    autocrlf = false
    eol = lf
    pager = delta
[include]
    path = ~/.misc/delta-themes.config
[init]
    defaultBranch = main
[rerere]
    enabled = true
[gpg]
    format = ssh
[pull]
    rebase = false
    ff = only
[diff]
    colorMoved = default
[alias]
    unstage = reset HEAD --
    last = log -1 HEAD
    undo-commit = reset --soft HEAD~1
[interactive]
    diffFilter = delta --color-only
[delta]
    side-by-side = false
    line-numbers = true
    navigate = true
    hyperlinks = true
[merge]
    conflictstyle = zdiff3
